package com.example.pdfproject.PdfFacture;


import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.*;

import java.util.Map;

@RestController
@RequestMapping("/api/factures")
public class SubscriptionSaveController {

    @Autowired
    private SubscriptionRepository subscriptionRepository;

    @PostMapping
    public ResponseEntity<?> saveFacture(@RequestBody Subscription subscription) {
        try {
            Subscription savedSubscription = subscriptionRepository.save(subscription);
            return ResponseEntity.ok(Map.of("id", savedSubscription.getId()));
        } catch (Exception e) {
            e.printStackTrace();
            return ResponseEntity.status(HttpStatus.INTERNAL_SERVER_ERROR).body("Erreur lors de la sauvegarde");
        }
    }
}
